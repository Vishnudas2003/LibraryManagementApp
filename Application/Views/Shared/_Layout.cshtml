@{
    var title = string.IsNullOrWhiteSpace(ViewBag.Title) ? "BiblioTech" : $"{ViewBag.Title} - BiblioTech";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <title>@title</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pace-js@latest/pace-theme-default.min.css">
    <link rel="stylesheet" href="~/css/flash.css">
    <!-- Include Select2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet"/>
    <!-- Include Bootstrap 5 theme for Select2 if needed -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2-bootstrap-5-theme/1.3.0/select2-bootstrap-5-theme.min.css" rel="stylesheet"/>
</head>
<body>

<partial name="Partials/_Navbar"/>

<div class="container-fluid px-0 py-0 py-lg-3">
    <main role="main">
        @RenderBody()
    </main>
</div>

<partial name="Partials/_Footer"/>

<!-- Include jQuery first -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<!-- Include Bootstrap JS -->
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
<!-- Include Pace JS -->
<script src="https://cdn.jsdelivr.net/npm/pace-js@latest/pace.min.js"></script>
<!-- Include Select2 JS after jQuery -->
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<!-- Include your site's JS -->
<script src="~/js/site.js" asp-append-version="true"></script>
<!-- RenderSection for Scripts -->
@await RenderSectionAsync("Scripts", required: false)

</body>
</html>