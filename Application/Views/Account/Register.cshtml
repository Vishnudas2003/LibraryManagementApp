@model Core.Models.Account.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Register";
}

<div class="row vh-84">
    <div class="col-md-6 d-none d-md-block authentication-background"></div>
    <div class="col-md-6 d-flex align-items-center justify-content-center">
        <form asp-action="Register" asp-controller="Account" method="post" class="authentication-form">

            @* <h1 class="display-3 text-center">Register</h1> *@

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email address</label>
                <input asp-for="Email" type="email" class="form-control" aria-describedby="emailHelp">
                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Username</label>
                <input asp-for="Username" type="text" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control">
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary w-100">REGISTER</button>
            </div>
            <div class="mb-3">
                <span>Already have an account? <a asp-action="Login" asp-controller="Account">Login</a></span>
            </div>
        </form>
    </div>
</div>